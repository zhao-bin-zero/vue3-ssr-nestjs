{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"moduleResolution": "node",
		"outDir": "./dist/server",
		"incremental": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"server/*"
			]
		},
		"types": [
			"@types/node"
		]
	},
	"include": [
		"server/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"**/*spec.ts",
		"web",
		"build"
	]
}